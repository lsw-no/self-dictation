/* 听写时页面样式 */
.container{
  height: 1084rpx;
}

.dictation-item {
  height: 60rpx;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #4facfe;
  border-top: 1rpx solid #4facfe;
  width: 100%;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
}


.index {
  margin-left: 10rpx;
  text-align: center;
  width: 10%;
  border-right: 1rpx solid #4facfe;
}

.interpretation {
  margin-left: 10%;
  width: 60%;
  overflow: hidden;
}

.voice {
  width: 20%;
  margin-left: 5%;
}

.voice image {
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 听写时样式结束 */

/* 听写结束页面样式 */
.checkall {
  margin-top: 20rpx;
  position: absolute;
  right: 5%;
  top: 0;
}

.c3{
  width: 100%;
  height: 497px;
  margin-top: 90rpx;
}

.result-item{
  height: 60rpx;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #4facfe;
  border-top: 1rpx solid #4facfe;
}

.list{
  display: flex;
  flex-direction: row;
  line-height: 70rpx;
  border-bottom: 1rpx solid #4facfe;
}

.list image{
  margin-left: 3rpx;
  width: 80rpx;
  height: 80rpx;
}

.word{
  width: 155rpx;
  margin-left: 20rpx;
  overflow: hidden;
}
.result-interpretation{
  width: 380rpx;
  align-content: center;
  font-size: 15px;
  padding: 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 5%;
}

/* 听写结束页面样式结束 */

/* 按钮组样式 */

.btn {
  position: absolute;
  bottom: 55rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #4facfe;
}


.btn text {
  margin-top: 10rpx;
}

.addToWordBook {
  top: 35rpx;
  left: 355rpx;
  width: 160rpx;
  height: 70rpx;
}

.backIndex {
  top: 35rpx;
  left: 380rpx;
  width: 140rpx;
  height: 70rpx;

}

.cancelBtn {
  top: 35rpx;
  left: 355rpx;
  width: 160rpx;
  height: 70rpx;
}

.endBtn {
  top: 35rpx;
  left: 380rpx;
  width: 170rpx;
  height: 70rpx;

}

.blockBtn {
  position: relative;
  float: left;
  text-align: center;
  line-height: 70rpx;
  font-size: 25rpx;
  color: white;
  background-color: #4facfe;
  border-radius: 10rpx;
}